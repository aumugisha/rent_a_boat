
<div class="top-boats-page">
  <h1>Boats list</h1>
</div>
<%= form_tag boats_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a boat"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="container-perso">
  <ul class="cards">
    <% @boats.each do |boat| %>
      <% if boat.photos.first.present? %>
        <div class="card-category"> 
          <div class="w3-card-4"> 
            <img src="<%= cl_image_path boat.photos.first.key%>" alt="" class=images-border-radius width=500px length=800px>
          </div>
        
          <div class="w3-container w3-center">
            <p class=p-medium> <%= link_to boat.name, boat_path(boat), {:style=>'color:blue; '} %>
                  <br><%= boat.address %> <br><%= boat.price_per_day %> €</p>
          </div>


        </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/1600x900/?boat')" > </div>
      <div class="container">
        <li class="boat-group-item, text-center" style="color: white "> <%= link_to boat.name, boat_path(boat), 
          {:style=>'color:white; '} %> <br><%= boat.address %> <br><%= boat.price_per_day %> €</li>
      </div>
        <% end %>      
    <% end %>
  </ul>

  <%= link_to "Add new boat", new_boat_path %><br>
    <div class="map-container"><div id="map"
    style="width: 100%; height: 600px;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div></div>
</div>


